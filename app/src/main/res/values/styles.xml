<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Widget.Dindinn.Tabs" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.Dindinn.Tab</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>

    <style name="TextAppearance.Dindinn.Tab" parent="@style/TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ThemeOverlay.Dindinn.Light" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/deep_sky_blue</item>
        <item name="colorPrimaryVariant">@color/warm_blue</item>
    </style>

    <style name="Widget.Dindinn.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:paddingEnd">8dp</item>
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="titleTextAppearance">@style/TextAppearance.Dindinn.ToolbarTitle</item>
    </style>

    <style name="TextAppearance.Dindinn.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

<!--    <style name="AppTheme" parent="Base.AppTheme" />-->

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.Dindinn.Light" />

    <style name="PopupMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Widget.Dindinn.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
    </style>

</resources>